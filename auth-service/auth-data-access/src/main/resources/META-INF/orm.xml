<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
                                      http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">
    <named-native-query
            name="findUserSimpleComposeByUserId"
            result-class="az.rock.flyjob.auth.dataAccess.model.compose.UserSimpleCompose">
        <query>
            SELECT first_name as userFirstName FROM auth.users usr WHERE usr = :userId
        </query>
    </named-native-query>
</entity-mappings>
